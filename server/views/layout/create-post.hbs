<form method="POST"  class="js-sendPost">
	<div class="form-group">
		<label for ="titlePost">Titulo del Post</label>
		<input type="text" class="form-control" name="title" placeholder="Titulo" value="" required>
	</div>
	<div class="form-group">
		<label for ="contentPost">Contenido</label>
		<input type="text" class="form-control"  name="content"placeholder="Contenido" value="" required>
	</div>
	<div class="form-group">
		<label for ="extractPost">Extracto</label>
		<input type="text" class="form-control"  name="extract" placeholder="Extracto" required>
	</div>
	<div class="form-group">
		<label for ="authorPost">Autor</label>
		<input type="text" class="form-control" name="author" placeholder="Autor" required>
	</div>
	<div class="form-group">
		<label for ="imagePost">Imagen</label>
		<input type="text" class="form-control"   name="image" placeholder="Imagen" required>
	</div>
	<div class="form-group">
		<label for ="galleryPost">Galeria</label>
		<input type="text" class="form-control" name="gallery" placeholder="Imagen" required>
	</div>
		

	<button type="submit" class="btn btn-default js-saveNews">Publicar</button>
</form>
